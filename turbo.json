{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "API_ENV",
    "API_PORT",
    "API_DATABASE_URL",
    "API_ALLOWED_ORIGINS",
    "API_ALLOWED_HEADERS",

    "WEB_BASE_URL",
    "WEB_AWS_COGNITO_CLIENT_ID",
    "WEB_AWS_COGNITO_URL",
    "WEB_MAKE_WEBHOOK_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
